<%= form_with model: @event do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>

  <%= f.label :description %>
  <%= f.text_area :description %>

  <%= f.label :starttime %>
  <%= f.datetime_select :starttime %>

  <%= f.label :endtime %>
  <%= f.datetime_select :endtime %>

  <%= f.label :host_id %>
  <%= f.collection_select :host_id, Host.all, :id, :organisation %>

  <%= f.label :venue_id %>
  <%= f.collection_select :venue_id, Venue.all, :id, :name %>

  <%= f.label :genre_id %>
  <%= f.collection_select :genre_id, Genre.all, :id, :name %>

  <%= f.submit %>
<% end %>
